@model ProductModel

<div class="container mb-5">
        <div class="image-section">
            <img src="https://images-ext-1.discordapp.net/external/sbIdhgvHck4V1JbV0VEncJVVVSEpDz5UolB2cX5gGnw/http/via.placeholder.com/640x360" alt="" />
            <div class="menu">
              <div class="icons">
                  <button class="link"><i class="fa-regular fa-code-compare"></i></button>
                  <button class="link"><i class="fa-regular fa-heart"></i></button>
                  <button class="link"><i class="fa-regular fa-bag-shopping"></i></button>
              </div>

              <a asp-controller="Products" asp-action="Detail" type="button" class="btn-theme">QUICK VIEW</a>

            </div>
        </div>

        <div class="body-section">
            <div class="category">Coats</div>
            <div class="name">@Model.Name</div>

                        <div class="star-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                var solid = i <= Model.StarRating ? "fa-solid" : "fa-regular";
                                <i class="fa fa-star @solid"></i>
                            }
                        </div>

            <div class="price">@Model.Price</div>
        </div>
</div>
